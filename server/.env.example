# Configuration du Serveur
PORT=3000                       # Port du serveur
NODE_ENV=development            # Environment (development/production)

# Base de données MongoDB
MONGO_URI=mongodb://localhost:27017/travelmate    # URI de connexion MongoDB

# JWT (JSON Web Token)
JWT_SECRET=your_jwt_secret_key          # Clé secrète pour JWT (générer une clé forte)
JWT_EXPIRES_IN=7d                       # Durée de validité du token

# OpenAI API (pour les suggestions d'itinéraire)
OPENAI_API_KEY=your_openai_api_key      # Clé API OpenAI

# AWS S3 (stockage des photos)
AWS_ACCESS_KEY_ID=your_aws_access_key    # Identifiant d'accès AWS
AWS_SECRET_ACCESS_KEY=your_aws_secret    # Clé secrète AWS
AWS_REGION=eu-west-3                     # Région AWS (ex: eu-west-3 pour Paris)
AWS_S3_BUCKET=your_bucket_name           # Nom du bucket S3

# Redis (cache)
REDIS_HOST=localhost                     # Hôte Redis
REDIS_PORT=6379                          # Port Redis
REDIS_PASSWORD=                          # Mot de passe Redis (si nécessaire)

# URLs de l'application
CLIENT_URL=http://localhost:19006        # URL du client React Native
API_URL=http://localhost:3000            # URL de l'API

# Configuration des images
MAX_IMAGE_SIZE=5242880                   # Taille maximum des images (5MB)
IMAGE_QUALITY=80                         # Qualité de compression des images (0-100)

# Limites API
RATE_LIMIT_WINDOW=15                    # Fenêtre de limitation en minutes
RATE_LIMIT_MAX=100                      # Nombre maximum de requêtes par fenêtre

# Configuration des logs
LOG_LEVEL=info                           # Niveau de log (debug/info/warn/error)