# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/travelmate
MONGODB_TEST_URI=mongodb://localhost:27017/travelmate-test

# JWT Configuration
JWT_SECRET=votre_jwt_secret_super_securise
JWT_EXPIRES_IN=7d

# Google Maps API
GOOGLE_MAPS_API_KEY=votre_google_maps_api_key

# Cloud Storage (pour les photos)
CLOUD_STORAGE_BUCKET=votre_bucket_name
CLOUD_STORAGE_REGION=eu-west-3

# Email Service (pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app

# Firebase Cloud Messaging (pour les notifications push)
FCM_SERVER_KEY=votre_fcm_server_key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=10
